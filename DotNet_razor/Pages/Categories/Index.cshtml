@page
@model DotNet_razor.Pages.Categories.IndexModel

<!--<partial name="_notifications" />-->
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
       <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
                </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.ObjCategoryList)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <div class="w-75 btn-group" role="group">
                        <td>
                        <a asp-page="/categories/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-fill"></i> Edit</a>
                        </td>
                        <td>
                        <a asp-page="/categories/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 "><i class="bi bi-trash-fill"></i> Delete</a>
                        </td>
                    </div>
                </tr>
            }
        </tbody>
    </table>
</div>

